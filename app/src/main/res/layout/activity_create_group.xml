<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarTrackVertical="@drawable/background_navy_rectangle"
        tools:context=".CreateGroupActivity">

        <TextView
            android:id="@+id/tvCreateGroupPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/benchnine_bold"
            android:text="create group"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llFormContainerCG"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCreateGroupPageTitle">

            <RelativeLayout
                android:id="@+id/rlUploadImageCG"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/tvCreateGroupPageTitle">

                <ImageView
                    android:id="@+id/ivGroupPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="5dip"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/background_navy_rectangle" />

                <LinearLayout
                    android:id="@+id/llUploadPhotoCG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivUploadIconCG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/ic_upload_gf_foreground"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvUploadPhotoCG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial_ce"
                        android:text="Upload Photo"
                        android:textColor="@color/white" />
                </LinearLayout>

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTextFormCG"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:id="@+id/etGroupName"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:drawableLeft="@drawable/ic_star"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_star"
                    android:hint="Group Name"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.551"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/flLocationEditCG"
                    android:layout_width="370dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/autocomplete_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etGroupName">

                    <TextView
                        android:id="@+id/tvAutocompleteHintCG"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="27dp"
                        android:paddingTop="20dp"
                        android:text="Location"
                        android:textSize="18dp" />

                    <fragment
                        android:id="@+id/afCreateGroup"
                        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:hint="" />
                </FrameLayout>


                <LinearLayout
                    android:id="@+id/llDescriptionCG"
                    android:layout_width="380dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:paddingTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/flLocationEditCG">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="description icon"
                        android:paddingLeft="5dp"
                        android:paddingTop="11dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="10dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_description" />

                    <EditText
                        android:id="@+id/etDescription"
                        android:layout_width="350dp"
                        android:layout_height="220dp"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint=" Description (500 char max)"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etLocationCG" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvQuestion2CG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Which cause(s) does this group relate to?"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llDescriptionCG" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvChooseGroupCauses"
                    android:layout_width="396dp"
                    android:layout_height="673dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvQuestion2CG" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateGroup"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_margin="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Create Group"
                    app:backgroundTint="@color/primary_salmon"
                    app:cornerRadius="50dp"
                    app:iconTint="@color/primary_salmon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvChooseGroupCauses"
                    app:strokeColor="@color/primary_salmon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

