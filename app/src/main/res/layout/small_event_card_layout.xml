<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvEventSmallCard"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivEventSmallCardPhoto"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:adjustViewBounds="false"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <View
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/card_gradient_bottom_to_top" />

        <LinearLayout
            android:id="@+id/llEventSmallCardText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tvEventSmallCardDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial_bold"
                android:paddingStart="7dp"
                android:text="Date \u2022 Time \u2022 Attendees"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvEventSmallCardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_bold"
                android:paddingStart="7dp"
                android:paddingTop="3dp"
                android:text="Event \u2022 Event Title"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>