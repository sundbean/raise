<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventConfirmationActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="141dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTypeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Type:  "
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tvNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name:  "
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tvDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date:  "
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tvTimeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time:  "
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tvLocationLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location:  "
                android:textAlignment="textEnd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEventNameC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvEventType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvEventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateEvent"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_margin="24dp"
        android:layout_marginTop="16dp"
        android:text="Go to Event Page"
        app:backgroundTint="@color/primary_salmon"
        app:cornerRadius="50dp"
        app:iconTint="@color/primary_salmon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:strokeColor="@color/primary_salmon" />

    <TextView
        android:id="@+id/tvEventConfirmationHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="CONFIRMATION"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>