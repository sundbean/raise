<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EventConfirmationActivity">

    <TextView
        android:id="@+id/tvEventConfirmationHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/bebas_neue_bold"
        android:text="SUCCESS!"
        android:textAllCaps="true"
        android:textColor="@color/primary_navy"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToEventDetail"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:text="Go to Event Page"
        app:backgroundTint="@color/primary_salmon"
        app:cornerRadius="50dp"
        app:iconTint="@color/primary_salmon"
        app:layout_constraintBottom_toTopOf="@+id/btnGoToMainFeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/primary_salmon" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToMainFeed"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:text="Go to Main Feed"
        android:textColor="@color/primary_salmon"
        app:backgroundTint="@color/white"
        app:cornerRadius="50dp"
        app:iconTint="@color/primary_salmon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/primary_salmon"
        app:strokeWidth="3dp" />











</androidx.constraintlayout.widget.ConstraintLayout>